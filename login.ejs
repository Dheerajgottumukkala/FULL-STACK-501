<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      background: linear-gradient(135deg, #6EE7B7 0%, #3B82F6 100%);
    }
  </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-gray-900 to-gray-800">
  <!-- Navigation -->
  <nav class="relative w-full bg-gradient-to-r from-blue-600 via-purple-600 to-pink-500">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <div class="flex-shrink-0">
          <h1 class="text-2xl font-bold text-white tracking-wider hover:scale-105 transition-transform duration-200 cursor-pointer">
            SportsHub
          </h1>
        </div>
      </div>
    </div>
  </nav>

  <!-- Login Form -->
  <main>
    <div class="max-w-md mx-auto px-4 sm:px-6 lg:px-8 py-24">
      <div class="container bg-white p-8 rounded-xl shadow-lg">
        <form action="/login" method="POST">
          <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Login</h1>

          <div class="mb-5">
            <label for="email" class="block text-lg text-gray-700 font-medium mb-2">Email Address:</label>
            <input
              type="email"
              name="email"
              id="email"
              required
              placeholder="Enter your email address"
              autocomplete="off"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-300"
            />
          </div>

          <div class="mb-5">
            <label for="password" class="block text-lg text-gray-700 font-medium mb-2">Password:</label>
            <input
              type="password"
              name="password"
              id="password"
              required
              placeholder="Enter your password"
              autocomplete="new-password"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-300"
            />
          </div>

          <button
            type="submit"
            class="w-full bg-indigo-600 text-white py-3 rounded-lg hover:bg-indigo-700 transition duration-300 font-semibold text-lg"
          >
            Login
          </button>

          <p class="mt-4 text-center text-gray-600 text-lg">
            Don't have an account?
            <a href="/register" class="text-indigo-600 hover:underline">Register</a>
          </p>
        </form>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-gradient-to-r from-blue-600 via-purple-600 to-pink-500 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-white/80">&copy; 2023 SportsHub. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
